<div id="<%= dom_id message %>" class="scaffold_record">
  <p>
    <strong>Body:</strong>
    <%= simple_format(message.body) %>
  </p>

  <p>
    <strong>Inbox:</strong>
    <%= link_to message.inbox.name, message.inbox %>
  </p>

  <% if current_user.voted_for? message %>
    <%= button_to 'Downvote', [:upvote, @inbox, message], method: :patch, data: { turbo: 'false' } %>
  <% else %>
    <%= button_to 'Upvote', [:upvote, @inbox, message], method: :patch, data: { turbo: 'false' } %>
  <% end %>
  Total: <%= message.weighted_score %>

  <p>
    <strong>User:</strong>
    <%= message.user.email %>
  </p>

  <%= button_to "Destroy", inbox_message_path(@inbox, message), method: :delete %>

</div>
